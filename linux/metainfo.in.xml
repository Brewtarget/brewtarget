<component type="desktop-application">
  <id>@CONFIG_APPLICATION_ID@</id>

  <name>CONFIG_APPLICATION_NAME_UC</name>
  <summary>Beer brewing software</summary>

  <!--
   See https://www.freedesktop.org/software/appstream/docs/chap-Quickstart.html#qsr-app-contents for why the metadata
   license needs to be more permissive than GPL.
  -->
  <metadata_license>BSL-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <description>
    <p>
      Desktop application for creating beer recipes, managing ingredients and performing related calculations.
    </p>
  </description>

  <launchable type="desktop-id">@CONFIG_APPLICATION_ID@.desktop</launchable>

  <url type="homepage">@CONFIG_WEBSITE_URL@</url>

  <developer id="@CONFIG_ORGANIZATION_REVERSE_DOMAIN@">
    <name>@CONFIG_ORGANIZATION_NAME@</name>
  </developer>

  <!--
   This rating generated with the help of https://hughsie.github.io/oars/.  It's somewhat stating the obvious that a
   Beer recipe tool and ingredient manager would refer to alcohol, but the content_rating tag is required to avoid
   warnings when we generate an AppImage.
  -->
  <content_rating type="oars-1.1">
    <content_attribute id="drugs-alcohol">moderate</content_attribute>
  </content_rating>

</component>
