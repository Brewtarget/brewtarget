{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/beerjson/beerjson/master/json/fermentation.json",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "FermentationProcedureType": {
      "type": "object",
      "description": "FermentationProcedureType defines the procedure for performing fermentation.",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "fermentation_steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "fermentation_step.json#/definitions/FermentationStepType"
          }
        }
      },
      "required": [
        "name",
        "fermentation_steps"
      ]
    }
  }
}
